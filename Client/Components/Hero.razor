<MudText Typo="@Typo" Color="@Color" Class="mb-2" Align="@Align">@Title</MudText>
<MudText Color="Color.Surface" Class="mb-4">@Description</MudText>

@code
{
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Description { get; set; }
    [Parameter]
    public Color Color { get; set; } = Color.Primary;
    [Parameter]
    public Align Align { get; set; } = Align.Inherit;
    [Parameter]
    public Typo Typo { get; set; } = Typo.h5;
}